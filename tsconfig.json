{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist.browser",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2016", "dom", "es5"],
    "noEmitOnError": true,
    "sourceMap": true,
    "paths": {
      "@interfaces/*": ["./src/range/ts/interfaces/*"],
      "@type/*": ["src/range/ts/type/*"],
      "@enums/*": ["./src/range/ts/enums/*"],

      "@elements/*": ["./src/range/elements/*"],
      "@utils/*": ["./src/range/utils/*"],
    }
  },
  "include": [
    "./src/**/*",
    "./src/index.ts",
    "./webpack.config.js",
    "./jest.config.js",
    "__tests__/**/*"
  ],
}
